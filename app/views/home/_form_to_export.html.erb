<%= form_tag '/home/export' do %>
    <%= hidden_field_tag   :btc_price_export, '50500.55' %>
    <%= hidden_field_tag   :eth_price_export, '3500.55' %>
    <%= hidden_field_tag   :ada_price_export, '115.55' %>
    <%= submit_tag "Exportar CSV", url: link_to( '/' ,{ :controller => :home,
    :action => :export }, format: 'csv'), data: { disable_with: 'Descargando...' } %>
    <%= submit_tag "Exportar EXCEL", url: link_to( '/' ,{ :controller => :home,
    :action => :export }, format: 'xls'), data: { disable_with: 'Descargando...' } %>
    <%= submit_tag "Exportar JSON", url: link_to( '/' ,{ :controller => :home,
    :action => :export }, format: 'json'), data: { disable_with: 'Descargando...' } %>
<% end %>